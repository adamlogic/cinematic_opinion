!!! 5
%html
  %head
    %title Navigating the Universe of Cinematic Opinion
    = stylesheet_link_tag 'all'
    <link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,300italic,700' rel='stylesheet' type='text/css'>

%body

  %h1 Navigating the Universe of Cinematic Opinion

  .year-filter

  .chart
    %svg#chart

    .y-axis-label
      %strong Audience Score (AS)

    .x-axis-label
      %strong Rotten Tomatoes Score (RTS)

    .legend
      %h2 Legend
      %p Oscar-winning Film
      %p Oscar-nominated Film
      %p Regular Film

    .info
      %span.info-score
        RTS
        %span.info-tomato-score
      %span.info-score
        AS
        %span.info-audience-score

      %h2.info-film
        %span.info-film-name
        (<span class="info-year"></span>)

    #legend-overlay
      %svg

  = javascript_include_tag 'all'
